<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UpdatePhoto">

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:onClick="backtoprofile"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="?attr/actionModeCloseDrawable"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Tap on image below to upload another picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="32sp"
            android:id="@+id/textView" tools:ignore="HardcodedText"/>

    <ImageView
            android:layout_width="250dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
            android:id="@+id/profileimage"
            android:layout_gravity="center"
            android:contentDescription="select image" tools:ignore="HardcodedText"/>

    <Button
            android:text="Upload"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:background="@drawable/login_button"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/saveimagetofirebase" tools:ignore="HardcodedText"/>

</LinearLayout>