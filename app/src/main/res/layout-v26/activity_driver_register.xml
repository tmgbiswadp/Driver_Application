<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".DriverRegister">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"
                android:layout_width="150dp"/>

        <EditText
                android:layout_width="match_parent"
                android:textCursorDrawable="@null"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:drawableEnd="@drawable/ic_person_black_24dp"
                android:hint="Full Name"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:id="@+id/fullName" tools:ignore="Autofill,HardcodedText"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="License No"
                android:textCursorDrawable="@null"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:drawableEnd="@drawable/ic_receipt_black_24dp"
                android:id="@+id/citizenshipno" tools:ignore="Autofill,HardcodedText"/>

        <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textCursorDrawable="@null"
                android:maxLines="1"
                android:hint="Email"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:drawableEnd="@drawable/ic_email_black_24dp"
                android:inputType="textEmailAddress"
                tools:ignore="Autofill,HardcodedText"/>

        <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@null"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:hint="Password"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:drawableEnd="@drawable/ic_lock_outline_black_24dp"
                android:maxLines="1"
                android:inputType="textPassword"
                tools:ignore="Autofill,HardcodedText"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Contact"
                android:textCursorDrawable="@null"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:drawableEnd="@drawable/ic_contact_phone_black_24dp"
                android:maxLines="1"
                android:id="@+id/Contact"
                tools:ignore="Autofill,HardcodedText"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:hint="Address"
                android:textCursorDrawable="@null"
                android:drawableEnd="@drawable/ic_add_location_black_24dp"
                android:maxLines="1"
                android:id="@+id/Address" tools:ignore="Autofill,HardcodedText"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="8dp"
                android:textCursorDrawable="@null"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:hint="Route"
                android:autofillHints="Itahari-Dubahi"
                android:drawableEnd="@drawable/ic_map_black_24dp"
                android:maxLines="1"
                android:id="@+id/route"
                tools:ignore="HardcodedText"/>
        <Button
                android:id="@+id/buttonRegister"
                style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/login_button"
                android:text="Register"
                tools:ignore="HardcodedText"/>

        <Button
                android:id="@+id/buttonLogin"
                style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@null"
                android:text="Already a member? Login here"
                android:textAllCaps="false"
                android:textSize="15sp"
                tools:ignore="HardcodedText"/>
    </LinearLayout>
</RelativeLayout>